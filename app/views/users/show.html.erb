<div class="body">
    <div class="container">
      <div class="row">
        <div class="col-xs-9">
          <h2>Bolos</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th>イメージ</th>
                  <th>タイトル</th>
                  <th>本文</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
                    <tbody>
                      <% @user.articles.each do |article| %>
                        <tr>
                          <th><%= attachment_image_tag article.user, :profile_image, fallback: "noimage.png", size: "50x50" %></th>
                          <th><%= link_to article.title, article_path(article) %></th>
                          <th><%= article.body %></th>
                        </tr>
                      <% end %>
                      <%= link_to "ユーザー編集", edit_user_path %>
                    </tbody>
              </table>
          </div>
        </div>
    </div>
</div>